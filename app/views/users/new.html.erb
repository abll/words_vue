<!-- The New User Sign Up Page For Words For Reader Application>-->
<head>
    <%= javascript_pack_tag 'new_user' %>
 </head>

 <body>
    <h1>New User Sign Up</h1>

    <%= content_tag :div,
        id: "new-user-form",
        data: {
            user: @user.to_json(except: [:id, :created_at, :updated_at])
        } do %>

    <div class="form-group">
        <label>Name</label>
        <input type="text" v-model="user.name" />
    </div>
        
    <div class="form-group">
        <label>Username</label>
        <input type="text" v-model="user.username" />
    </div>
        
    <div class="form-group">
        <label>Email</label>
        <input type="text" v-model="user.email" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" v-model="user.password_digest" id="pw"/>
    </div>

    <div class="form-group">
        <label>Password Confirm</label>
        <input type="password" v-on:keyup="testMethod" id="pw-conf"/>
    </div>

    <button type="button" v-on:click="saveUser">Sign Up</button>
        
    <% end %>
</body>